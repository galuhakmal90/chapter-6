<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  <link rel="stylesheet" href="../css/style.css">
  <title>GAME</title>
</head>

<body>
  <h1>SIGN UP</h1>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="input-form">

          <div class="mb-3">
            <label class="form-label">Username</label>
            <input type="text" class="form-control" placeholder="Masukkan Username Anda" id="regUsername">
          </div>
          <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" placeholder="Masukkan Password Anda" id="regPassword">
          </div>
          <div class="mb-3">
            <label class="form-label">Nama Lengkap</label>
            <input type="text" class="form-control" placeholder="Masukkan Nama Lengkap" id="regNamaLengkap">
          </div>
          <div class="mb-3">
            <label class="form-label">Alamat</label>
            <textarea type="text" class="form-control"  placeholder="Masukkan Alamat" id="regAlamat"></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label">Umur</label>
            <input type="text" class="form-control" placeholder="Masukkan Umur Anda" id="regUmur">
          </div>
          <div class="mb-3">
            <input type="hidden" class="form-control" placeholder="score" id="score">
          </div>

          <button type="submit" class="btn btn-primary" onclick=handleRegister()>Register</button>
        </div>
      </div>
      <div class="col">
        <div class="form_login">
          <div class="mb-3">
            <label class="form-label">Username</label>
            <input type="text" class="form-control" placeholder="Username" id="cariUsername">
          </div>
          <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" placeholder="Masukkan Password Anda" id="cariPassword">
          </div>

          <button type="submit" class="btn btn-primary" onclick=handleLogin()>Login</button>
        </div>
        
      </div>

      <div class="menu-list">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Nama Lengkap</th>
              <th scope="col">Alamat</th>
              <th scope="col">Umur</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% for( let i = 0; i < menuBio.length; i++ ) { %>
              <tr id="menu">
                <th scope="row"><%= i + 1 %></th>
                <td><%= menuBio[i].fullname %></td>
                <td><%= menuBio[i].address %></td>
                <td><%= menuBio[i].age %></td>
                <td>
                  <!--<button type="submit" class="btn btn-primary">Edit</button>-->
                  <button type="submit" class="btn btn-danger" onclick = handleDelete(<%= menuBio[i].id %>)>Delete</button>
                </td>
              </tr>
            <% } %>
              
            
          </tbody>
        </table>
      </div>
      
    </div>


  </div>
  
  <script src="../js/script.js"></script>
</body>

</html>